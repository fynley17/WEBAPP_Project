{
  "name": "PHP + Vue Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  "customizations": {
    "settings": {
      "terminal.integrated.defaultProfile.linux": "/bin/bash"
    }
  },
  "postCreateCommand": "npm install --prefix /workspaces/${localWorkspaceFolderBasename}/frontend",
  "mounts": [
    "source=${localWorkspaceFolder}/frontend,target=/workspaces/${localWorkspaceFolderBasename}/frontend,type=bind",
    "source=${localWorkspaceFolder}/backend,target=/workspaces/${localWorkspaceFolderBasename}/backend,type=bind",
    "source=${localWorkspaceFolder}/backend/vendor,target=/var/www/html/vendor,type=bind",
    "source=${localWorkspaceFolder}/backend/public,target=/var/www/html/public,type=bind",
    "source=${localWorkspaceFolder}/backend,target=/var/www/html,type=bind"
  ],
  "forwardPorts": [
    80,
    8080
  ],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {}
}