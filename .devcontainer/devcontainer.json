{
	"name": "PHP + Vue Dev Container",
	"dockerFile": "Dockerfile",
	"context": "..",
	"customizations": {
		"settings": {
			"terminal.integrated.defaultProfile.linux": "/bin/bash"
		  }
	},
	"postCreateCommand": "npm install --prefix /workspace/frontend",
	"mounts": [
"source=${localWorkspaceFolder},target=/workspace,type=bind",
	  "source=${localWorkspaceFolder}/frontend,target=/workspace/frontend,type=bind",
	  "source=${localWorkspaceFolder}/backend,target=/workspace/backend,type=bind",
	  "source=${localWorkspaceFolder}/backend,target=/var/www/html,type=bind"
	],
	"forwardPorts": [80, 8080],
	"workspaceFolder": "/workspace",
	"features": {}
  }
  